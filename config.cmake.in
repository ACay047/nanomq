macro (NANO_SET arg val)
  if (DEFINED ${arg})
    message(FATAL_ERROR
      "[${arg}:${val}] has been defined, remove CMakeCache.txt and retry.")
  endif ()
  SET(${arg} ${val})
endmacro ()

# gdb support
NANO_SET(DEBUG 0)
# asan support
NANO_SET(ASAN 0)
# Parallelism (min 4, max 1000)
NANO_SET(PARALLEL 32)

